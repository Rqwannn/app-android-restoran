<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_manu"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/burger"
            android:layout_width="170dp"
            android:layout_height="160dp"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:text="Burger"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/title_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/deskripsi"
                android:textSize="16sp"
                android:text="Burger lezat dengan banyak lapisan yang membuat anda senang"
                android:layout_marginVertical="9dp"
                android:layout_below="@+id/title_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_idr"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="IDR. "
                android:layout_below="@+id/deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/harga_menu"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="35.000"
                android:layout_toRightOf="@+id/text_idr"
                android:layout_below="@+id/deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>